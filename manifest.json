{
  "manifest_version": 3,
  "author": "Robert Sibek 2023",
  "name": "CSFD Titulky",
  "description": "Přidá odkaz na titulky.com pro daný film",
  "version": "0.0.0.1",
  "action": {
    "default_popup": "csfd_titulky.html",
    "default_icon": "images/Icon@8x.png"
  },
  "icons": {
    "16": "images/Icon.png",
    "32": "images/Icon@2x.png",
    "48": "images/Icon@3x.png",
    "64": "images/Icon@4x.png",
    "128": "images/Icon@8x.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js",
        "scripts/main.js"
      ],
      "matches": [
        "https://www.csfd.cz/film/*"
      ]
    }
  ]
}